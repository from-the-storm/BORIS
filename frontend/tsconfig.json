{
    "compilerOptions": {
        "allowJs": false,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "jsx": "react",
        "experimentalDecorators": true
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "**/*-test.*",
        "node_modules"
    ]
}
