{
  "name": "boris-integration",
  "version": "0.0.1",
  "description": "BORIS Integration Tests",
  "scripts": {
    "pretest": "cd ../backend/ && NODE_ENV=test ./node_modules/.bin/ts-node db/reset-db.ts",
    "test": "NODE_ENV=test jest"
  },
  "author": "From the Storm",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "~22.0.0",
    "@types/selenium-webdriver": "~3.0.8",
    "chromedriver": "~2.34.0",
    "jest": "~22.0.4",
    "selenium-webdriver": "~3.6.0",
    "ts-jest": "~22.0.0",
    "typescript": "~2.6.2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "test.*\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
