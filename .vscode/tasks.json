{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build & Watch Frontend",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "watch"
            ],
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}