{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build & Watch Frontend",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "watch"
            ],
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Database Servers",
            "type": "shell",
            "command": "docker-compose",
            "args": ["up"],
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "problemMatcher": []
        },
        {
            "label": "Apply database migrations",
            "type": "shell",
            "command": "npm",
            "args": ["run", "migrate"],
            "isBackground": false,
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "problemMatcher": [],
            "windows": {
                "options": {
                    "env": {
                        // Fixes to work with Docker Toolbox on Windows:
                        "BORIS_CONFIG": "{\"development\": {\"db_host\": \"192.168.99.100\"}, \"redis_host\": \"192.168.99.100\"}"
                    }
                }
            }
        }
    ]
}
